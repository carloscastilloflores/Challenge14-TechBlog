<div class="container pt-4 ">
    <div class="h2 mr-auto p-2" >Create New Post</div>
    <form id="postForm">
    <div class="form-group pt-4 row" >
        <label for="post-title" class="col-sm-2 col-form-label">Title:</label>
        <div class="col-sm-10">
        <input type="text" class="form-control" id="post-title" placeholder="Amazing Title!">
        </div>
    </div>
    <div class="form-group pt-4 row">
        <label for="post-content" class="col-sm-2 col-form-label">Content:</label>
        <div class="col-sm-10">
        <input type="text" class="form-control" id="post-content" placeholder="Interesting information">
        </div>
    </div>
    <div class=" d-flex justify-content-center pt-4"> 
        <button class="btn btn-info btn-lg btn-block" type="submit">Create</button>
    </div> 
    </form>

</div>

